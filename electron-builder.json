{
  "productName": "ReelSteady Joiner",
  "appId": "org.rubegartor.reelsteady-joiner",
  "artifactName": "${productName}-setup-${version}.${ext}",
  "compression": "maximum",
  "directories": {
    "output": "builds/"
  },
  "files": [
    "app/templates/index.html",
    "app/assets/style/app.css",
    "app/src/**/*",
    "app/app.js",
    "index.js",
    "app/assets/images/icn.ico"
  ],
  "extraResources": [
    {
      "from": "app/utils/udtacopy.exe",
      "to": "app/utils/udtacopy.exe"
    },
    {
      "from": "app/utils/exiftool.exe",
      "to": "app/utils/exiftool.exe"
    }
  ],
  "nsis": {
    "installerIcon": "app/assets/images/icn.ico",
    "installerHeaderIcon": "app/assets/images/icn.ico",
    "deleteAppDataOnUninstall": true
  },
  "win": {
    "icon": "app/assets/images/icn.ico",
    "target":[
      "nsis",
      "msi"
    ]
  }
}
